%nav.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#navbar-top", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Traditions - Middleton", root_url, class: "navbar-brand"
    #navbar-top.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              = current_user.name
              %span.caret
            %ul.dropdown-menu
              %li= link_to('Profile', user_path(current_user))
              %li= link_to 'Edit Profile', edit_user_path(current_user)
              %li= link_to 'Change password', edit_user_registration_path
              %li= link_to('Sign out', destroy_user_session_path, method: :delete)
        - else
          %li= link_to 'About', about_path
          %li= link_to 'Sign up', new_user_registration_path
          %li= link_to 'Sign in', user_session_path
